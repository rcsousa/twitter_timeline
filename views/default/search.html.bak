{{extend 'layout.html'}}
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
        <script></script>
    </head>

        <form class="form-horizontal">
  <div class="form-group form-group-lg">
    <label class="col-sm-2 control-label" for="formGroupInputLarge">SEARCH</label>
    <div class="col-sm-8">
      <input class="form-control" type="text" id="formGroupInputLarge" placeholder="Large input" name="q" id="search_box">
    </div>
      <div class="col-sm-2">
          <input type="submit" type="button" class="btn btn-primary" id="mybutton" value="Find" onclick="jQuery('#loading').slideToggle()"/>
      </div>
  </div>
</form>
    {{if request.vars['q'] == '':}}
        <table>
            <tr>
                <td></td>
            </tr>
        </table>
    {{else:}}
        <table>
            <tr>
                {{ i = 0 }}
                {{while i < len(post):}}
                <td>
                    On {{=created_on[i]}} {{=A(B(user_id[i]))}} said:
                    <blockquote class="post_body">{{=post[i]}}</blockquote>
                </td>
            </tr>
            {{i=i+1}}
         {{pass}}
        </table>
    {{pass}}
